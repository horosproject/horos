		jidctred.c \
		jmemmgr.c \
		jmemnobs.c \
		jquant1.c \
		jquant2.c \
		jutils.c \
		rdcolmap.c

LIBRARY=	libJpglossy.a

OBJECTS=	$(SOURCES:%.c=$(ARCH)/%.o)

$(LIBDIR)/$(LIBRARY): $(OBJECTS)
		ar rv $@ $?
		ranlib $@

lint:		$(SOURCES)
		$(LINT.c) $(SOURCES)



.KEEP_STATE:
.INIT:   $(LIBDIR) $(ARCH)
$(LIBDIR) $(ARCH) :
		test -d $@ || mkdir -p $@

$(ARCH)/%.o: %.c
		$(COMPILE.cc) $< -o $@

clean:
		-rm -Rf $(ARCH) *.BAK .emacs_*
