CPPFLAGS=	-I$(INCDIR) -DXTFUNCPROTO -g
CFLAGS=		-g
LINTFLAGS=	-hb

SOURCES= 	jcmainct.c \
		jcomapi.c \
		jcparam.c \
		jdapimin.c \
		jdapistd.c \
		jdatasrc.c \
		jdcoefct.c \
		jdcolor.c \
		jddctmgr.c \
		jdhuff.c \
		jdinput.c \
		jdmainct.c \
		jdmarker.c \
		jdmaster.c \
		jdmerge.c \
		jdphuff.c \
		jdpostct.c \
		jdsample.c \
		jerror.c \
